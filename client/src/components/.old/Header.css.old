.header__box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(105, 105, 105, 0.616);
  padding: 0 auto;
}

.header__title {
  font-size: 1.7rem;
  padding: 0 1.7rem;
  color: #000;
}

.header__input {
  border: none;
  border-radius: 10px;
  padding: 0.8rem 2rem;
}

.header__button {
  border: none;
  text-decoration: none;
  padding: 0.8rem 2rem;
  color: #fff;
  font-size: 1rem;
  font-style: oblique;
  margin-right: 0.7rem;
  border-radius: 5px;
  background-color: rgb(69, 145, 155);
}
