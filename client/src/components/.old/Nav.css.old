.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgb(69, 145, 155);
    color: #fff;
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.301);
}

.logo {
    font-size: 2rem;
    margin: 1rem;
}

.nav__list {
    display: flex;
    list-style: none;
    margin: 1rem 1rem;
}

.nav__item {
    margin-left: 2rem;
}

.nav__link {
    text-decoration: none;
    color: #fff
}